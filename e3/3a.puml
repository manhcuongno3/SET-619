@startuml 3a
start
:Nhập số nguyên dương n;
if (n <= 1?) then (Yes)
:In thông báo "n phải là số nguyên dương lớn hơn 1";
stop
else (No)
:Set i = 2;
while (i <= sqrt(n)?) is (Yes)
if (n % i == 0?) then (Yes)
:In thông báo "n không phải là số nguyên tố";
stop
endif
:Set i = i + 1;
endwhile (No)
:In thông báo "n là số nguyên tố";
stop
@enduml
